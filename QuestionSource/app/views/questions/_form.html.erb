<%= form_for([@section, @question]) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% @question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :desc %><br />
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.date_select :submitted, { :discard_day => true, :discard_month => true, :discard_year => true }%>
  </div>
  <div class="field">
    <%= f.hidden_field :score, :value => 10 %>
  </div>
  <% if user_signed_in? %>
  <div class="field">
    <%= f.hidden_field :user, :value => current_user.email%>
  </div>
  <% else %>
  <div class="field">
    <%= f.hidden_field :user, :value =>"Anonymous" %>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>

